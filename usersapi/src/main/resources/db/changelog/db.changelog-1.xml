<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
	<changeSet author="abalogh" id="1">

		<createTable tableName="companies">
			<column name="id" type="uuid">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="name" type="varchar">
				<constraints nullable="false" />
			</column>
			<column name="utility_type" type="int">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>
	<changeSet author="abalogh" id="2">
		<loadData encoding="UTF-8" file="db/changelog/data/companies.txt"
			quotchar="'" separator=";" tableName="companies" >
			<column name="id" type="string" />
			<column name="name" type="string" />
			<column name="utility_type" type="numeric" />
		</loadData>
	</changeSet>
</databaseChangeLog>		